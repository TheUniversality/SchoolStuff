<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>IVN_MainLogo_1to1.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="IVN_MainLogo_1to1.png" />
    <None Remove="ReleaseNews.txt" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="IVN_MainLogo_1to1.ico" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="IVN_MainLogo_1to1.png" />
    <Content Include="ReleaseNews.txt">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

</Project>
